  <body  id="page-top">
    <% include header.ejs %>
    <section class="no-padding" style="display: flex; height: 100%" id="tourinsights">
        <div id="searchdiv" style="width: 60em; height: 100%; float: left; box-sizing: border-box">
            <div style="background-color: floralwhite; border: double lightgray;">
                <div style="display: flex">
                    <div style="width: 70%; float: left; box-sizing: border-box; padding-left: 10%; color: maroon; ">
                        <h2>San Jose Real Estate</h2>
                        <h4><strong>Showing 12 homes</strong></h4>
                    </div>
                    <div class="btn-group btn-group-justified" style="float: right; margin-right: 5%; width: 30%">
                        <button style="padding: 10px; background-color: white; font-size: large; border:thin solid lightgray; text-decoration: underline; margin-top: 10%;">
                            <a href="#about" data-link="first">Table</a>
                        </button>
                        <button style="padding: 10px; background-color: white; font-size: large; border:thin solid lightgray; text-decoration: underline; margin-top: 10%;">
                            <a href="#about" data-link="second">Photos</a>
                        </button>
                    </div>
                    <div class="col-md-offset-8">
                        <div id="pages_about" class="textContainer_about">
                            <div class="textWord_about" data-link="first">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead><td></td><td>Apartment Name</td><td>Price</td></thead>
                                        <tr class="bg-success"><td width="4px">1</td><td><p id="myPara1">101 E San Fernando St.</p></td><td>4500</td></tr>
                                        <tr class="bg-success"><td width="4px">2</td><td><p id="myPara2">201 South 4th street</p></td><td>4950</td></tr>
                                        <tr class="bg-success"><td width="4px">3</td><td><p id="myPara3">33rd South Apartments</p></td><td>5600</td></tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                    <script type="text/javascript">
                            $('.textWord_about').hide();
                            $('.link').click(function() {
                                $('.textWord_about').hide();
                                $('.textWord_about[data-link=' + $(this).data('link') + ']').fadeIn({
                                        width: '200px'
                                }, 300);
                            });
                    </script>


            </div>

        </div>
        <div id="mapdiv" class="hidden-xs hidden-sm" style="width: 50%; height: 100%; box-sizing: border-box; float: left; position: absolute"></div>
    </section>
    <% include jsinclusions.ejs %>
    <script style="text/javascript">
        function initMap() {
            var map = new google.maps.Map(document.getElementById('mapdiv'), {
                center: new google.maps.LatLng(37.5, -122),
                scrollwheel: false,
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            });
            var latitude = 37.5;
            var longitude = -122;
            var marker = new google.maps.Marker({
                position: new google.maps.LatLng(latitude, longitude)
            });
            var ctaLayer = new google.maps.KmlLayer({
                url: 'http://localhost:3000/images/maps/cb_2014_us_zcta510_500k.kml',
                map: map
            });
            marker.setMap(map);
        }
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>
  </body>
</html>
