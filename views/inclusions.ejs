<script>
    function header_change(){
        var email = sessionStorage.getItem('email');
        console.log(email);
        if(email != null){
            console.log( document.getElementById('change').innerHTML);
            var change_to = "Welcome  " + email + "  ";
            document.getElementById('change').innerHTML = change_to;

